<div>
  <h3><%= @user.name %></h3>

  <%= image_tag @user.get_profile_image(100,100) %>

  <h4><%= @user.profile %></h4>

  <h4><%= @user.genre.name %></h4>

    <th>follows</th>
    <th><%= link_to @user.followings.count, user_followings_path(@user) %></th>
    <th>followers</th>
    <th><%= link_to @user.followers.count, user_followers_path(@user) %></th>

  <% if current_user == @user %>
      <td><%= link_to "プロフィール編集", edit_user_path(@user.id),class: "btn btn-success" %></td>
      <td><%= link_to "退会",  users_deactivate_path, class: "btn btn-danger" %></td>
  <% end %>
       </br>
       <% if current_user != @user %>
        <% if current_user.following?(@user) %>
          <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete,class: "btn btn-success" %>
        <% else %>
          <%= link_to "フォローする", user_relationships_path(@user.id), method: :post,class: "btn btn-success" %>
        <% end %>
      <% end %>
</div>

