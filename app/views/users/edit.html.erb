<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>編集</h2>
<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
<%= form_with model: @user do |f| %>
  <div class="form-group"><label for="inputName">Name</label></br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
  <div class="form-group"><label for="inputImage">Image</label></br>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
  <div class="form-group"><label for="inpuProfile">紹介文</label></br>
  <%= f.text_area :profile, autofocus: true, id:"inputProfile", placeholder:"ここに自己紹介を書き込みましょう"%></div>
  <h5>あなたのクリエイティブジャンルを選択してください</h5>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name), include_blank: true %></br>
  <%= f.submit "Update User",class: "btn btn-secondary" %>
<% end %>

    </div>
  </div>
</div>
