<h1>投稿してみよう！<h1>
<%= form_with model: @post, url: '/posts', method: :post do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  
  <h4>本文</h4>
  <%= f.text_area :body, class: 'form-control',size: "20x10" %>

  <h4>説明</h4>
  <%= f.text_area :introduction %>

  <%= f.submit '投稿' %>
<% end %>
