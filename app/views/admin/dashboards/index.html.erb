<div class="container">
 <div class="row　mt-5">
  <h1>全ユーザー一覧</h1>

<%= form_with url: delete_selected_admin_users_path, method: :delete, local: true do %>
  <ul>
    <% @users.each do |user| %>
        <%= check_box_tag "user_ids[]", user.id %>
        <%= link_to user.name, edit_admin_user_path(user.id) %> - <%= user.email %>
    <% end %>
  </ul>

  <%= submit_tag '選択したユーザーを削除', data: { confirm: '選択したユーザーを本当に削除しますか？' } %>
<% end %>

 </div>
</div>